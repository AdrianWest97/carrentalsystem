@{
    if (!User.Identity.IsAuthenticated)
    {
        <section id="mobile-app-area" style="background:#333">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="mobile-app-content">
                            <h2>Dont have an account</h2>
                            <p>Create an account now and start booking vehicles</p>
                            <div class="app-btns">
                                <a href="/Account/Register">Create an account</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
<section id="about-area" class="section-padding">

    <div class="container">
        <div class="row">
            <!-- Section Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>About us</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>ADAt Car rental sultions</p>
                </div>
            </div>
            <!-- Section Title End -->
        </div>

        <div class="row" id="about-area">
            <!-- About Content Start -->
            <div class="col-lg-6">
                <div class="display-table">
                    <div class="display-table-cell">
                        <div class="about-content">
                            <p>The Adat solution is a web app that deals with the entire process of renting a car and creates a hassle-free experience for both the customer and the car dealerships. </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- About Content End -->
            <!-- About Video Start -->
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="/Content/img/home-2-about.png" alt="JSOFT">
                </div>
            </div>
            <!-- About Video End -->
        </div>

        <!-- About Fretutes Start -->
        <div class="about-feature-area">
            <div class="row">
                <!-- Single Fretutes Start -->
                <div class="col-lg-4">
                    <div class="about-feature-item">
                        <i class="fa fa-car"></i>
                        <h3>ALL BRANDS</h3>
                        <p>Have a favorite brand? Dont worry, We have cars from all brands here</p>
                    </div>
                </div>
                <!-- Single Fretutes End -->
                <!-- Single Fretutes Start -->
                <div class="col-lg-4">
                    <div class="about-feature-item">
                        <i class="fa fa-search"></i>
                        <h3>SEARCH</h3>
                        <p>Search and find your car from our repository</p>
                    </div>
                </div>
                <!-- Single Fretutes End -->
                <!-- Single Fretutes Start -->
                <div class="col-lg-4">
                    <div class="about-feature-item">
                        <i class="fa fa-money"></i>
                        <h3>BUDGET</h3>
                        <p>Find cars that are within your price range</p>
                    </div>
                </div>
                <!-- Single Fretutes End -->
            </div>
        </div>
        <!-- About Fretutes End -->
    </div>
</section>
<!--== About Us Area End ==-->
<section>
    <div class="col-lg-12">
        <div class="section-title  text-center">
            <h2>Featured rentals</h2>
            <span class="title-line"><i class="fa fa-car"></i></span>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-10">

            <div class="row">
                @{
                    if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            @Html.Partial("_SingleVehicle", item)
                        }
                    }
                    else
                    {
                        <div class="jumbotron">
                            <h2>No rentals to display</h2><br />
                            <p>The Adat solution is a web app that deals with the entire process of renting a car and creates a hassle-free experience for both the customer and the car dealerships</p><br />
                            <div class="log-btn">
                                <a class="rent-btn" href="/">Home</a>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</section>

