@model IEnumerable<CarRentalAdatSolutions.Models.Vehicle>
@{ 
    ViewBag.Title = "Vehicles";
}
<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay" style="height:500px">
    <div class="container" style="margin-top:-70px">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Rentals</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>


                </div>
            </div>

            <!-- Page Title End -->
        </div>
            @Html.Partial("_SearchBar")
    </div>
</section>

<!--== Page Title Area End ==-->
<!--== About Us Area Start ==-->
<!--== About Us Area End ==-->
<section>
    <br>
    <div class="row justify-content-md-center">
        <div class="col-lg-10">

            <div class="row">
                @{
                    if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            @Html.Partial("_SingleVehicle", item)
                        }
                    }
                    else
                    {
                        <div class="jumbotron">
                            <h2>No rentals to display</h2><br />

                            <p>The Adat solution is a web app that deals with the entire process of renting a car and creates a hassle-free experience for both the customer and the car dealerships</p><br />
                            <div class="log-btn">
                                <a href="/">
                                    <button type="button" class="btn btn-primary btn-lg" style="background-color:#ffd000">Go go home</button>
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
